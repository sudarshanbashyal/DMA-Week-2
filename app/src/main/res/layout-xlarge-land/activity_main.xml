<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/count_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#faaa00"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/initial_count"
        android:textColor="@color/design_default_color_primary"
        android:textSize="160sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toast_btn" />

    <Button
        android:id="@+id/toast_btn"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:text="@string/toast_btn_label"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/count_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/count_btn"
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:text="@string/count_btn_label"
        android:textSize="60sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/toast_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/toast_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>